{
  "type": "VerticalLayout",
  "elements": [
    {
      "type": "Control",
      "scope": "#/properties/image"
    },
    {
      "type": "Group",
      "label": "Allgemeines Daten zur Stätte",
      "elements": [
        {
          "type": "HorizontalLayout",
            "elements": [
              {
                "type": "Control",
                "scope": "#/properties/title",
                "label": "Bezeichnung"
              },
              {
                "type": "Control",
                "scope": "#/properties/titleVariants",
                "label": "Alternative Bezeichnungen"
              }
            ]
        },
        {
          "type": "Control",
          "scope": "#/properties/description",
          "label": "Beschreibung",
          "options": {
            "multi": true
          }
        }
      ]
    },
    {
      "type": "Group",
      "label": "Beziehungen zu anderen Stätten",
      "elements": [
        {
          "type": "Control",
          "label": "Übergeordnete Stätte",
          "scope": "#/properties/parent"
        },
        {
          "type": "Control",
          "label": "Beziehung zu einem geographischen Ort (Stadt/Land/Region)",
          "scope": "#/properties/location"
        }
      ]
    }
  ]
}
